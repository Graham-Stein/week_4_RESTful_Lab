<form>



  <label for ="first-name-field">First name</label>
  <input
  type="text" name="first_name" value='<%= @pizza.first_name %>'
  id="first-name-field"
  />

  <label for ="last-name-field">Last name</label>
  <input
  type="text" name="last_name" value='<%= @pizza.last_name %>'
  id="last-name-field"
  />


  <label for ="quantity-field">Quantity</label>
  <input
  type="number"
  name="quantity"
  value='<%= @pizza.quantity %>'
  id="quantity-field"
  />

  <label for ="topping-select">Choose your topping</label>
  <select name="topping" value='<%= @pizza.topping %>' id="topping-select">
    <option value="margherita">Margherita</option>
    <option value="pepperoni">Pepperioni</option>
    <option value="Italian Sausage">Italian Sausage</option>
  </select>

  <input type="submit"  value="Update Order">

</form>
